<div class="center-header">
  <div class="left-side">
    <div class="header-title">
      <%= @room.name%>
     </div>
   </div>
 <div class="right-side">
    <div class="header-botton">
      <a href="#">チャットを終了する></a>
    </div>
 </div>
</div>

<div class="centers">
   <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "bottom-content"}, local: true do |f|%>
  <div class="bottom-input">
    <%= f.text_field :content, class: 'bottom-message', placeholder: 'type a message' %>
    <label class="bottom-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'bottom-submit' %>
<% end %>
</div>
</div>
